<% include ../partials/header.ejs%>
<% include ../partials/navbar.ejs%>

<div class="container">
	<div class="row">
		<div class="reduce_width">
			<h3 style="text-align: center;">Upload a new photo</h3>
			<form action="/photos" method="POST">

				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="Name">
				</div>
				
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="Image url">
				</div>

				<div class="form-group">
					<input class="form-control" type="text" name="description" placeholder="Description">
				</div>

				<div class="form-group">
					<textarea class="form-control" rows="6" type="text" name="author_note"></textarea>
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-default btn-block" type="submit">Submit</button>
				</div>
			</form>
			<a href="/photos">Back</a>
		</div>
	</div>
</div>

