<% include ../partials/header.ejs%>
<% include ../partials/navbar.ejs%>

<div class="container">
	<div class="row">
		<div class="reduce_width">
			<h3 style="text-align: center;">Edit <%= photo.name %></h3>
			<br>
			<form action="/photos/<%= photo._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="photo[name]" value="<%= photo.name %>">
				</div>
				
				<div class="form-group">
					<input class="form-control" type="text" name="photo[image]" value="<%= photo.image %>">
				</div>

				<div class="form-group">
					<input class="form-control" type="text" name="photo[description]" value="<%= photo.description %>">
				</div>

				<div class="form-group">
					<textarea class="form-control" rows="6" type="text" name="photo[author_note]"><%= photo.author_note %></textarea>
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-default btn-block" type="submit">Submit</button>
				</div>
			</form>
			<a href="/photos">Back</a>
		</div>
	</div>
</div>

<% include ../partials/footer.ejs%>