<% include ../partials/header.ejs%>
<% include ../partials/navbar.ejs%>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to PhotoWorld</h1>

			<p>View our unique collection of photos from all over the world</p>
			<p>
			<a class="btn btn-primary btn-large" href="/photos/new">Add a new Photo</a>
			</p>
		</div>
	</header>

	<!-- <div class="row">
		<div class="col-lg-12">
			<h3>Our Most Popular photos!</h3>
		</div>
	</div> -->

	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
		
		<% photos.forEach(function(photo){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img class="passport" src="<%= photo.image %>">
					<div>
						<h4><%= photo.name %></h4>
					</div>
					<div>
						<p>
							<a href="/photos/<%= photo._id %>" class="btn btn-primary">More Info</a>
						</p>
					</div>
				</div>
			</div>
		<% }) %>	

	</div>

</div>

<% include ../partials/footer.ejs%>