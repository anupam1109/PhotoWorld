<% include ../partials/header.ejs%>
<% include ../partials/navbar.ejs%>

<div class="container">
	<div class="row">
		<div class="reduce_width">
			<h2 style="text-align: center;">Edit Comment</h2>
			<br>
			<form action="/photos/<%= photo_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">

				<div class="form-group">
					<textarea class="form-control" rows="5" type="text" name="comment[text]"><%= comment.text %></textarea>
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-default btn-block" type="submit">Submit</button>
				</div>
			</form>
			<a href="/photos/<%= photo_id %>">Back</a>
		</div>
	</div>
</div>

